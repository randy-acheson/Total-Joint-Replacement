<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="Pain"
                android:id="@+id/recordPain_button"
                android:drawableTop="@drawable/record_48dp"
                android:onClick="openRecordPain"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/button"
                android:textColor="@color/default_button_text_color"
                android:layout_margin="5dp"
                android:paddingTop="50dp"
                android:paddingBottom="50dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="Activity"
                android:id="@+id/activity_button"
                android:drawableTop="@drawable/profile_48dp"
                android:onClick="openRecordActivity"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignRight="@+id/recordPain_button"
                android:background="@drawable/button"
                android:textColor="@color/default_button_text_color"
                android:layout_margin="5dp"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="Custom\nReminders"
                android:id="@+id/pain_management_button"
                android:drawableTop="@drawable/activity_48dp"
                android:onClick="openPainManagement"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button"
                android:textColor="@color/default_button_text_color"
                android:layout_margin="5dp"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:text="Assessment"
                android:id="@+id/report_button"
                android:drawableTop="@drawable/report_48dp"
                android:onClick="openReport"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/recordPain_button"
                android:background="@drawable/button"
                android:textColor="@color/default_button_text_color"
                android:layout_margin="5dp"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>